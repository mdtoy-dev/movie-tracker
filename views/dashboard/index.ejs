<div class="container-fluid container-fluid-custom pb-5 mb-5">
    <div class="row mb-4">
        <div class="col">
            <h1>Hey, <%= userName %> </h1>
        </div>
        <div class="col text-end">
            <a href="/dashboard/add" class="btn btn-danger">+ Add Movie</a>
        </div>
    </div>

    <div class="row">
        <% if(movies.length > 0) { for(var i=0; i < movies.length; i++) { %>
            <div class="col-sm-3 mb-4">
                <div class="card border-danger" style="min-height: 210px">
                <a href="/dashboard/item/<%= movies[i]._id %>" class="card-body text-decoration-none">
                    <h5 class="card-title"><%= movies[i].title %></h5>
                    <p class="card-text"><%= movies[i].body %></p>

                </a>
                
                </div>
            </div>
            
        <%  }} else { %>

            <div class="row">
                <div class="col-3">
                    <img src="/img/human-3.svg" alt="Human poiinting hand toward a create button">
                </div>
                <div class="col mt-md-4">
                    <h2>Okay...</h2>
                    <h4>Let's start with your first movie!<br/><br/> 
                        <a href="/dashboard/add">Add one!</a>
                    </h4>
                </div>
            </div>

        <%  } %>

        <% if (movies.length > 0) { %>
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center mt-5">
                    <% if(current == 1) { %>
                      <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <% } else { %>
                      <li class="page-item"><a class="page-link" href="/dashboard">First</a></li>
                    <% } %>

                    <% var i = (Number(current) > 5? Number(current) - 4 : 1) %>
                    <% if (i !== 1) { %>
                      <li class="page-item"><a class="page-link" href="#">...</a></li>
                    <% } %>

                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                        <% if (i == current) { %>
                            <li class="page-item"><a class="page-link" href="#"><%= i %></a></li>
                        <% } else { %>
                            <li class="page-item"><a class="page-link" href="/dashboard/?page=<%= i %>"><%= i %></a></li>
                        <% } %>
                    
                        <% if (i == Number(current) + 4 && i < pages) { %>
                            <li class="page-item"><a class="page-link" href="#">...</a></li>
                        <% } %>
                    <% } %>

                    <% if (current == pages) { %>
                        <li class="page-item disabled"><a class="page-link" href="#">Last</a></li>
                    <% } else { %>
                        <li class="page-item"><a class="page-link" href="/dashboard/?page=<%= pages %>">Next</a></li>
                    <% } %>

                </ul>
              </nav>
        <% } %>
    </div>
</div>